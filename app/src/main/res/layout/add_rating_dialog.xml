<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="309dp"
    android:layout_height="309dp"
    android:layout_gravity="center"
    android:background="@drawable/button_shape2"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Rate this Restaurant"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/orange_main"
        android:backgroundTint="@color/orange_main"
        android:isIndicator="false"
        android:max="5"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/orange_second"
        android:scaleX="0.8"
        android:scaleY=".8"
        android:secondaryProgressTint="@color/orange_main"
        android:stepSize="0.5" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_shape"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/commentText"
            android:layout_width="249dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:foregroundGravity="center|center_horizontal"
            android:gravity="center|start|center_horizontal|top"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarThumbVertical="@color/orange_second"
            android:scrollbars="vertical"
            android:shadowColor="@color/orange_main"
            android:textColor="@color/dark_blue"
            android:verticalScrollbarPosition="right" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelReservationBtn"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Cancel"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/postBtn"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:fontFamily="@font/montserrat"
            android:text="Post"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />
    </LinearLayout>


</LinearLayout>