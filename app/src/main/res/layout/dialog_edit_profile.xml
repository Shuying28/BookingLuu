<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="185dp"
    android:layout_gravity="center"
    android:background="@drawable/button_shape"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/customerNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold">


    </TextView>

    <LinearLayout
        android:id="@+id/customerNameText2"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/edit_text_shape"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/customerNameText"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:foregroundGravity="center_horizontal"
            android:gravity="center|start|center_horizontal"
            android:inputType="textMultiLine"
            android:textColor="@color/dark_blue" />


    </LinearLayout>

    <TextView
        android:id="@+id/phoneNoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerNameTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Phone No"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold">


    </TextView>

    <LinearLayout
        android:id="@+id/phoneNoText2"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/edit_text_shape"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/phoneNoText"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:foregroundGravity="center_horizontal"
            android:gravity="center|start|center_horizontal"
            android:inputType="textMultiLine"
            android:textColor="@color/dark_blue" />


    </LinearLayout>


    <Button
        android:id="@+id/cancelReservationBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/orange_main"
        android:fontFamily="@font/montserrat"
        android:text="Cancel"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/orange_main"
        android:fontFamily="@font/montserrat"
        android:text="Save"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />


</RelativeLayout>
